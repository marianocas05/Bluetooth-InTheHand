<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TestDrive.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TestDrive"
    Shell.FlyoutBehavior="Flyout"
    Title="TestDrive">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Device Info"
        ContentTemplate="{DataTemplate local:DeviceInfoPage}"
        Route="DeviceInfoPage" />

    <ShellContent
        Title="Recording"
        ContentTemplate="{DataTemplate local:RecordingPage}"
        Route="RecordingPage" />

    <ShellContent
        Title="Recording"
        ContentTemplate="{DataTemplate local:RecordingPage2}"
        Route="RecordingPage2" />

    <ShellContent
        Title="Equalizer"
        ContentTemplate="{DataTemplate local:EqualizerPage}"
        Route="EqualizerPage" />

</Shell>
